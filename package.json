{
  "name": "grindr-auto-tap",
  "version": "1.0.0",
  "description": "Browser extension (Chrome/Firefox/Edge) with TypeScript, Webpack (Manifest V3), Jest testing, GitHub Actions CI/CD, ESLint, Prettier, branch protection, custom emoji-based commit validation, semantic versioning, Dependabot updates, and complete documentation. Production-ready starter kit.",
  "author": "qveys",
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "webpack --watch --config webpack.config.js --mode development",
    "build": "webpack --config webpack.config.js --mode production",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "type-check": "tsc --noEmit",
    "prepare": "husky install",
    "validate": "npm run lint && npm run format:check && npm run type-check && npm run test:coverage"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.268",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.11.5",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "copy-webpack-plugin": "^12.0.2",
    "css-loader": "^6.9.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.2.4",
    "style-loader": "^3.3.4",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.3",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "keywords": [
    "browser-extension",
    "chrome-extension",
    "firefox-addon",
    "edge-extension",
    "manifest-v3",
    "typescript",
    "webpack",
    "jest"
  ],
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
